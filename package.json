{
  "name": "NodeJS-Terminal-Template",
  "description": "A Template for Nodejs Terminal Application using TypeScript",
  "type": "module",
  "version": "1.0.0",
  "main": "./build/index.js",
  "module": "./build/index.js",
  "types": "./build/index.d.ts",
  "exports": "./build/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/Mugambi-Ian/NodeJS-Terminal-Template---TypeScript"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "scripts": {
    "export": "tsc",
    "fix": "gts fix",
    "lint": "gts lint",
    "clean": "gts clean",
    "dev": "run-s preexport watch",
    "preexport": "npx rimraf build",
    "prepare": "husky install",
    "watch": "tsc-watch --noClear -p ./tsconfig.json --onSuccess \"node ./build/index.js\""
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "chalk-animation": "^2.0.2",
    "figlet": "^1.5.2",
    "gradient-string": "^2.0.0",
    "inquirer": "^9.1.0",
    "nanospinner": "^1.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@types/chalk-animation": "^1.6.1",
    "@types/figlet": "^1.5.4",
    "@types/gradient-string": "^1.1.2",
    "@types/inquirer": "^9.0.0",
    "@types/node": "^14.11.2",
    "eslint": "^8.21.0",
    "gts": "^4.0.0",
    "husky": "^8.0.1",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "tsc-watch": "^5.0.3",
    "typescript": "^4.7.4"
  }
}
